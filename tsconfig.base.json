{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,

//  `mrm-core` default type file is broken
    "baseUrl": ".",
    "paths": {
      "mrm-core": [
        "types/mrm-core.d.ts"
      ]
    }
  },
  "exclude": [
    "**/__tests__/*",
    "./node_modules"
  ]
}
